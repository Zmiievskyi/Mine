    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "paths": {
      "@spartan-ng/helm/button": [
        "./libs/ui/button/src/index.ts"
      ],
      "@spartan-ng/helm/utils": [
        "./libs/ui/utils/src/index.ts"
      ],
      "@spartan-ng/helm/table": [
        "./libs/ui/table/src/index.ts"
      ],
      "@spartan-ng/helm/dialog": [
        "./libs/ui/dialog/src/index.ts"
      ],
      "@spartan-ng/helm/tabs": [
        "./libs/ui/tabs/src/index.ts"
      ],
      "@spartan-ng/helm/badge": [
        "./libs/ui/badge/src/index.ts"
      ],
      "@spartan-ng/helm/select": [
        "./libs/ui/select/src/index.ts"
      ],
      "@spartan-ng/helm/icon": [
        "./libs/ui/icon/src/index.ts"
      ],
      "@spartan-ng/helm/input": [
        "./libs/ui/input/src/index.ts"
      ],
      "@spartan-ng/helm/label": [
        "./libs/ui/label/src/index.ts"
      ],
      "@spartan-ng/helm/sonner": [
        "./libs/ui/sonner/src/index.ts"
      ],
      "@spartan-ng/helm/card": [
        "./libs/ui/card/src/index.ts"
      ],
      "@spartan-ng/helm/textarea": [
        "./libs/ui/textarea/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
